        android:layout_marginBottom="88dp"
        android:text="Step 5. Bring 1 cup water to a boil, pour over the gelatin in a small bowl and stir until completely dissolved, about 2 minutes. Stir in 1/2 cup cold water. Pour the mixture evenly over the cooled cake. Refrigerate for 2 hours. Put a large bowl (for whipping the cream) in the refrigerator."
        android:textColor="@color/white1"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <TextView
        android:id="@+id/textView48"
